--Data Exploration â€“ Check Distinct Values

SELECT 
	Gender, 
	COUNT(Gender) AS TotalCount,
	COUNT(Gender) * 100.0 /(SELECT COUNT(*) FROM stg_CustomerData) AS Percentage 
FROM stg_CustomerData
GROUP BY Gender;

SELECT 
	Contract,
	COUNT(Contract) AS TotalCount,
	COUNT(Contract) * 100.0   / (SELECT COUNT(*) from stg_CustomerData) AS Percentage
FROM stg_CustomerData
GROUP BY Contract;

SELECT 
	Customer_Status,
	COUNT(Customer_Status) AS TotalCount,
	SUM(Total_Revenue) AS TotalRev,
	SUM(Total_Revenue)  / (SELECT SUM(Total_Revenue) FROM stg_CustomerData) * 100.0 AS RevPercentage 
FROM stg_CustomerData
GROUP BY Customer_Status;

SELECT 
	State,
	COUNT(State) AS TotalCount,
	COUNT(State) * 100.0 / (SELECT COUNT(*) from stg_CustomerData) AS Percentage
FROM stg_CustomerData
GROUP BY State
ORDER BY Percentage DESC;
SELECT DISTINCT Internet_Type
from stg_CustomerData;

